<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/px_positive_320"
    android:layout_height="@dimen/px_positive_410">

    <ImageView
        android:id="@+id/detail_icon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_positive_320"
        android:layout_marginTop="@dimen/px_positive_25"
        android:padding="@dimen/px_positive_25"
        android:layout_centerHorizontal="true"
        android:background="@drawable/module_pic_focus"
        android:contentDescription="@null"/>

    <TextView
        android:id="@+id/detail_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_positive_40"
        android:layout_below="@+id/detail_icon"
        android:layout_marginTop="@dimen/px_positive_25"
        android:text="@string/detail_name"
        android:textSize="@dimen/px_positive_40"
        android:textColor="@color/color0"
        android:gravity="center"/>
</RelativeLayout>